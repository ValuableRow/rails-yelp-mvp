<div class="container">
  <h1> Create a new restaurant</h1>
    <%= simple_form_for [@restaurant] do |f| %>
      <%= f.input :name %>
      <%= f.input :address %>
      <%= f.input :phone_number %>
      <%= f.input :category %>
      <%= f.submit "Submit review", class: "btn btn-primary" %>
    <% end %>
    <p><%= link_to 'Back to list', restaurants_path, class: "btn btn-primary" %></p>
</div>
